<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Danh sách các thí sinh</title>
  <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" /> -->
  <link rel="stylesheet" href="/css/candidate.css" />
  <link rel="stylesheet" href="/css/filter.css" />
  <link rel="stylesheet" href="/icofont/icofont.min.css">
</head>

<body style="height: 100vh; position: relative; margin: 0; padding: 0;">
  <h1>Danh sách các cộng tác viên đăng ký</h1>
  <%- include('./filter') %>
    <table>
      <tr>
        <th>Họ và tên</th>
        <th>Mã sinh viên</th>
        <th>Lớp học</th>
        <th>Điểm</th>
        <th>Bình luận</th>
      </tr>
      <% users.forEach(user=> { %>
        <tbody>
          <tr>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= user.studentCode %>
            </td>
            <td>
              <%= user.classroom %>
            </td>
            <td>
              <%= user.point %>
            </td>
            <td>
              <%= user.comment %>
            </td>
          </tr>
        </tbody>
        <% }) %>
    </table>
    <ul class="list__page">
      <li class="list__page-items">
        <a href="?page=1" class="list__page-items-link"><i class="icofont-hand-drawn-left"></i></a>
      </li>
      <li class="list__page-items list__page-items--active">
        <a href="?page=1" class="list__page-items-link">1</a>
      </li>
      <li class="list__page-items">
        <a href="?page=1" class="list__page-items-link">2</a>
      </li>
      <li class="list__page-items">
        <a href="?page=1" class="list__page-items-link">...</a>
      </li>
      <li class="list__page-items">
        <a href="?page=1" class="list__page-items-link">9</a>
      </li>
      <li class="list__page-items">
        <a href="?page=1" class="list__page-items-link">10</a>
      </li>
      <li class="list__page-items">
        <a href="?page=1" class="list__page-items-link"><i class="icofont-hand-drawn-right"></i></a>
      </li>
    </ul>
</body>

</html>
<%- include('./end.ejs') %>