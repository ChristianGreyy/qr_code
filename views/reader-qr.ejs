<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reader QR</title>
  </head>
  <body
    style="
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
    "
  >
    <h1>Scan Qr Code</h1>
    <div style="width: 500px" id="reader"></div>
    <table
      style="width: 70%; margin-bottom: 200px; text-align: left"
      class="table caption-top"
    >
      <h1 style="margin-top: 100px">Danh sách đăng kí cộng tác viên HIT</h1>
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Họ và tên</th>
          <th scope="col">Lớp</th>
          <th scope="col">Mã sinh viên</th>
          <th scope="col">Điểm</th>
          <th scope="col">Bình luận</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach((user, index) => { %>
        <tr class="<%= user._id %>">
          <th scope="row"><%= index+1 %></th>
          <td><%= user.name %></td>
          <td><%= user.class %></td>
          <td><%= user.studentCode %></td>
          <td style="width: 40px">
            <input
              class="candidate__point"
              style="height: 100%"
              placeholder="<%= user.point %>"
            />
          </td>
          <td>
            <textarea
              style="width: 100%; height: 30px"
              placeholder="<%= user.comment %>"
            ></textarea>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>

<%- include('./end.ejs') %>
